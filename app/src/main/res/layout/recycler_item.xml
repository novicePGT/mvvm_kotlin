<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/recycler_item"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_linear_black"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/item_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beginner"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vocabulary1"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/recycler_up_line"
            android:layout_width="3sp"
            android:layout_height="52dp"
            android:background="#be3455"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_circle_background"
            android:gravity="center">

            <ToggleButton
                android:id="@+id/recycler_main_toggle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/custom_toggle_unlock_black"
                android:textOff=""
                android:textOn=""
                android:clickable="false"/>

        </LinearLayout>

        <TextView
            android:id="@+id/recycler_down_line"
            android:layout_width="3sp"
            android:layout_height="52dp"
            android:background="#be3455"
            android:layout_gravity="center"/>


    </LinearLayout>

</LinearLayout>